# Bute un processus Oracle apr√®s s√©lection.

sqlo() { ‚Ä¶ }
ssho() { ‚Ä¶ }

sqlo "
	select
		'[32m'||to_char(a.sql_exec_start, 'YYYY-MM-DD HH24:MI:SS')||'[0m' debut, a.process pid, '[31m'||spid||'[0m' spid, a.sid, a.serial#, a.username,b.sql_id, cast(substr(b.sql_fulltext, 1, 4000) as varchar2(4000)),
	    a.*
	from v\\\$session a, v\\\$sql b, v\\\$process p
	where a.sql_id = b.sql_id and a.status = 'ACTIVE' and a.username != 'SYS'
	and p.addr = a.paddr
	order by sql_exec_start, a.process
" | less
printf "Lequel buter? " ; read cible
ssho "kill $cible ; sleep 20 ; kill -9 $cible"

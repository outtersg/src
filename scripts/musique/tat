#!/bin/sh

# Transcrire l'Audio en Texte

contexte="Guillaume Outters a bossÃ© chez Bouygues TÃ©lÃ©com Entreprises, comme SN3 Transverse, sur les IMEI, les MSISDN, avec la MOE."

analyserParametres()
{
	case "$m" in "")
m=/tmp/tat.`date +%Y%m%d.%H%M%S`
	;; esac
}

aff()
{
	awk \
	'
		BEGIN { r = ""; n = 0; }
		/^$/ { print; next; }
		{ t = ""; }
		/^\[/ {
			match($0, /\] */);
			t = substr($0, RSTART + RLENGTH);
			$0 = substr($0, 1, RSTART + RLENGTH - 1);
			
			r = r""t;
			while(match(r, /[.!?] */))
			{
				tout[++n] = substr(r, 1, RSTART);
				print tout[n] >> "'"$m"'.txt";
				r = substr(r, RSTART + RLENGTH);
			}
			if(r) r = r" ";
		}
		{ print "[90m"$0"[0m"t; }
		END {
			if(r)
			{
				tout[++n] = r;
				print tout[n] >> "'"$m"'.txt";
			}
			print "";
			for(i = 0; ++i <= n;) print tout[i];
		}
	'
}

analyserParametres "$@"
sox -t oss /dev/dsp1 $m.mp3 || true
whisper-cli -m ~/local/share/whisper/models/ggml-small.bin --language French --prompt "$contexte" "$@" $m.mp3 2>&1 | aff
echo "($m.mp3, $m.txt)"
case "$WAYLAND_DISPLAY" in ?*)
	wl-copy -p < $m.txt
esac

